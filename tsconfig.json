{
    "compilerOptions": {
        "target": "es3",
        "module": "commonJS",
        "moduleResolution": "Node",
        "strict": true,
        "noImplicitAny": true,
        "declaration": false,
        "skipLibCheck": true,
        "strictNullChecks": true,
        "resolveJsonModule": true,
        "outDir": "dist"
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}