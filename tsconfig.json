{
  "compilerOptions": {
    // Input â†’ Output
    "rootDir": "./src",
    "outDir": "./dist",

    // ESM environment
    "module": "nodenext",
    "target": "es2022",
    "moduleResolution": "nodenext",

    // Node environment
    "lib": ["es2022"],
    "types": ["node"],
    "resolveJsonModule": true,
    "esModuleInterop": true,

    // Helpful output
    "sourceMap": true,
    "declaration": false,

    // Relaxed typing for beginners
    "strict": false,
    "noUncheckedIndexedAccess": false,
    "exactOptionalPropertyTypes": false,

    // Safe but non-annoying defaults
    "isolatedModules": true,
    //"verbatimModuleSyntax": true,
    "skipLibCheck": true,

    // Reduce random import edge cases
    "moduleDetection": "force"
  },
  "include": ["src"]
}